{
  "name": "rawr/t-regx",
  "type": "library",
  "description": "PHP regular expression brought up to modern standards.",
  "license": "MIT",
  "scripts": {
    "fqn": "fqn-check src",
    "test": "phpunit test --no-coverage",
    "phpstan": "phpstan analyse --configuration phpstan.neon"
  },
  "keywords": [
    "pcre",
    "t-regx",
    "tregx",
    "regex",
    "regexp",
    "regular",
    "expression",
    "oop",
    "clean",
    "pattern",
    "match",
    "search",
    "preg",
    "split",
    "preg_match",
    "preg_match_all",
    "preg_replace",
    "preg_replace_callback",
    "preg_quote",
    "preg_split",
    "preg_last_error",
    "prepared patterns",
    "delimiters"
  ],
  "autoload": {
    "files": [
      "helper/helper.php"
    ],
    "psr-4": {
      "TRegx\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "test/"
    ],
    "files": [
      "test/Supposition/format.php",
      "test/Supposition/provided.php"
    ],
    "psr-4": {
      "Test\\": "test/",
      "Test\\Feature\\TRegx\\": "test/Feature/",
      "Test\\Functional\\TRegx\\": "test/Functional/",
      "Test\\Legacy\\TRegx\\": "test/Legacy/",
      "Test\\Structure\\TRegx\\": "test/Structure/",
      "Test\\Supposition\\TRegx\\": "test/Supposition/"
    }
  },
  "require": {
    "php": ">=7.1.0",
    "ext-mbstring": "*",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpstan/extension-installer": "^1.2"
  },
  "require-dev": {
    "ext-json": "*",
    "phpunit/phpunit": "^9.5.4 || ^8.0 || ^7.5",
    "rawr/cross-data-providers": "^2.3.0",
    "rawr/fqn-check": "^1.3.0",
    "phpstan/phpstan": "^1.10"
  },
  "archive": {
    "exclude": [
      "/test/**",
      "/test"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
